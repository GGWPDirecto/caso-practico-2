apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ app.backend.name }}
  namespace: {{ app_namespace }}
spec:
  replicas: {{ app.backend.replicas }}
  selector:
    matchLabels:
      app: {{ app.backend.name }}
  template:
    metadata:
      labels:
        app: {{ app.backend.name }}
    spec:
      containers:
        - name: {{ app.backend.name }}
          image: {{ app.backend.image }}
          ports:
            - containerPort: {{ app.backend.port }}
          volumeMounts:
            - name: {{ app.backend.pv }}
              mountPath: /data
      volumes:
        - name: {{ app.backend.pv }}
          persistentVolumeClaim:
            claimName: {{ app.backend.pv }}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ app.backend.pv }}
  namespace: {{ app_namespace }}
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
---
apiVersion: v1
kind: Service
metadata:
  name: {{ app.backend.name }}
  namespace: {{ app_namespace }}
spec:
  selector:
    app: {{ app.backend.name }}
  ports:
    - protocol: TCP
      port: {{ app.backend.port }}
      targetPort: {{ app.backend.port }}
